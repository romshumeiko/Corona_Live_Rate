<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rlParamsDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_double_margin"
        android:background="@drawable/bg_item"
        android:minHeight="@dimen/fragment_params_dialog_rl_params_dialog_min_height">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/default_double_margin"
            android:layout_marginTop="@dimen/default_double_margin"
            android:maxLines="1"
            android:text="@string/fragment_params_dialog_tv_title_text"
            android:textColor="@color/black_100"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/default_double_margin"
            android:layout_marginTop="@dimen/default_double_margin"
            android:layout_marginBottom="@dimen/default_double_margin"
            android:textAlignment="center"
            android:textSize="@dimen/default_small_text_size"
            tools:text="You can not select less than 1 filter" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnDialogOk"
        android:layout_width="@dimen/fragment_params_dialog_btn_dialog_ok_width"
        android:layout_height="@dimen/fragment_params_dialog_btn_dialog_ok_height"
        android:layout_below="@id/rlParamsDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_params_dialog_btn_dialog_ok_marginTop"
        android:background="@drawable/bg_btn_params_dialog"
        android:text="@string/fragment_params_dialog_btn_dialog_ok_text"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_text_size" />
</RelativeLayout>